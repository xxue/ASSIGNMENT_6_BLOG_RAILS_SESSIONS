<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render '/posts/nav' %>
    <div class="alert">
          <h3><%= notice || alert %></h3>
    </div>
    <%= yield %>
    <%= render '/posts/footer' %>
    </body>
</html>
