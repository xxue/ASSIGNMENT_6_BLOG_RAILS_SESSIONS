
<div class="row">
<div class="col-xs-4 col-xs-offset-4">
  <h2 style = "font-size:30px; font-family: San Francisco, sans-serif; text-align:center; color:grey">New Post</h2>
  <div class="form-group">
    <%= form_for @post do |f| %>
    <div>
      <%= f.label :title, style:'font-size:23px; font-family: San Francisco, sans-serif'%><br>
      <%= f.text_field :title, style: 'width:350px; height: 30px; border: 2px solid grey' %>
    </div>
    <div>
      <%= f.label :body, style:'font-size:22px; font-family: San Francisco, sans-serif' %><br>
      <%= f.text_area :body, style: 'width:350px; height: 200px; border: 2px solid grey' %>
    </div>
    <div>
      <%= f.label :category, style:'font-size:22px; font-family: San Francisco, sans-serif'  %><br>
      <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
    </div>
    <div class="submit-button" style="margin-top:20px">
      <%= f.submit%>
    </div>
    <% end %>
  </div>
  </div>
</div>
