
<div class="container-fluid" id = "mobilehide">
  <!-- upper pannel -->
  <div class="row" id = "upper">
    <!-- featured post -->
    <div class="col-xs-8">
      <a >
        <%=image_tag("2sail.jpg", id: "sunset")%>
      </a>
      <!-- buttons -->
      <div class="row">
          <div class="col-xs-8">
            <!-- responsive heart button-->
            <div class="btn-group">
            <%= button_to post_likes_path(@featured_post),class:"btn btn-default", style: "padding:0px; border:none;" do %>
                <i class="fa fa-heart-o fa-2x"style="color:red"></i>
            <% end %>
            </div>
            <!-- count likes -->
            <div class="btn-group">
              <span style="font-size:20px"><%= @featured_post.likes.count %></span>
            </div>
            <!-- responsive unike -->
            <% if @featured_post.likes.any? %>
              <div class="btn-group">
                <%= button_to like_path(@featured_post.likes.last),   class:"btn btn-default", style: "padding:2px; font-size: 15px", method: :delete do %>
                  unlike
                <% end %>
              </div>
            <% end %>
          </div>

          <div class="col-xs-4">
            <a href="#" class="fa fa-bookmark-o" style = "font-size: 23px; color: grey; float:right"></a>
          </div>
          </div>
      <!-- featured post -->
      <article class="col-sm-12 col-lg-12" style="font-family:San Francisco, sans-serif">
      <h1 href = "#"><%= @featured_post.title %></h1>
       <p><%= @featured_post.body %></p>
      </article>
    </div>
    <!-- right: most liked -->
    <div class="col-xs-4 visible-md visible-lg">
        <h3 style = "padding-left: 25px"> Most Liked </h3>
          <ul style="list-style:none">
            <% @popular.each do |post| %>
              <a href="#"><li><%= post.title %></li></a>
            <% end %>
          </ul>
      </div>
  </div>
</div>

<!-- write a post button -->
<div class="block" style = "font-size:30px; margin: 30px 20px 30px">
  <button type="button" name="button">
  <a href="posts/new">Write a New Post</a>
  </button>
</div>

<div class="container-fluid">
  <!-- lower panels, 3 columns of post-->
  <div class="row" id = "lower">
    <% @posts.each do |p| %>
      <div class= "col-xs-12 col-md-4">
          <div class="image">
            <%=image_tag("1redsail.jpg", id: "redsail")%>
          </div>
          <div class="row">
             <div class="col-xs-8">
               <!-- responsive heart button-->
               <div class="btn-group">
                   <%= button_to post_likes_path(p),class:"btn btn-default", style: "padding:0px; border:none;" do %>
                    <i class="fa fa-heart-o fa-2x"style="color:red"></i>
                   <% end %>
               </div>
               <!-- count likes -->
               <div class="btn-group">
                 <span style="font-size:20px"><%= p.likes.count%></span>
               </div>
               <!-- responsive unike -->
               <% if p.likes.any? %>
                 <div class="btn-group">
                   <%= button_to like_path(p.likes.last), class:"btn btn-default", style: "padding:2px; font-size: 15px", method: :delete do %>
                     unlike
                   <% end %>
                 </div>
              <% end %>
             </div>
             <div class="col-xs-4">
                <a href="#" class="fa fa-bookmark-o" style = "font-size: 22px; color: grey; float:right"></a>
             </div>
          </div>
          <div class = "col-xs-12 col-md-4" id = "mybox">
            <h3><a href="#"><%= link_to p.title, p %></a></h3>
            <p><%= p.body %></p>
          </div>
      </div>
   <% end %>
  </div>
</div>
